{
  "name": "firefose",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "engines": {
    "npm": "please-use-yarn",
    "yarn": ">= 1.19.1"
  },
  "scripts": {
    "start": "tsc -w",
    "build": "tsc",
    "test": "vitest run --coverage",
    "analyze:lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "analyze:type": "tsc",
    "analyze": "yarn run analyze:lint && yarn run analyze:type",
    "lint:eslint": "eslint src --ext .ts --fix",
    "lint:prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "lint": "yarn run lint:eslint && yarn run lint:prettier",
    "prepare": "npx husky install",
    "postinstall": "yarn prepare"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@vitest/coverage-istanbul": "^0.29.2",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sonarjs": "^0.18.0",
    "eslint-plugin-unicorn": "^45.0.2",
    "eslint-plugin-vitest": "^0.0.54",
    "husky": "^8.0.3",
    "prettier": "^2.8.4",
    "typescript": "^4.9.5",
    "vitest": "^0.29.2"
  },
  "dependencies": {
    "firebase-admin": "^11.5.0"
  }
}
